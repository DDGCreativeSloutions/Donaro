{
  "name": "donations-backend",
  "version": "1.0.0",
  "description": "Backend for Donaro App",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "migrate": "prisma migrate dev",
    "migrate:prod": "node migrate-prod.js",
    "deploy:vercel": "node deploy-vercel.js",
    "studio": "prisma studio",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathPattern=unit",
    "test:load": "artillery run __tests__/load/api-load-test.yml",
    "test:security": "node __tests__/security/api-security-test.js"
  },
  "dependencies": {
    "@prisma/client": "^5.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.1.0",
    "jsonwebtoken": "^9.0.1",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^7.0.9",
    "sharp": "^0.32.4",
    "socket.io": "^4.7.2",
    "twilio": "^5.10.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "prisma": "^5.0.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "@types/jest": "^29.5.8",
    "artillery": "^2.0.3",
    "sqlite3": "^5.1.6"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/__tests__/setup.js"],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 75,
        "functions": 75,
        "lines": 75,
        "statements": 75
      }
    }
  }
}